Interface  ("WinBaseTypes")
Module     ("WinDef")
Module     ("WinNT")

Interface  ("WinError")
Interface  ("WinBase")
Interface  ("WinCon")
Interface  ("WinGDI") % part of the implementation is portable
Module     ("WinIoctl")
Interface  ("WinNetwk")
Interface  ("WinNLS")
Module     ("WinReg")
