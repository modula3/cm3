  include (".." & SL & ".." & SL & ".." & SL & "m3-libs" & SL & "m3core" & 
           SL & "src" & SL & "float" & SL & "m3makefile")
else
  include (PKG_INSTALL & SL & "m3core" & 
           SL & "src" & SL & "float" & SL & "m3makefile")
end

proc File64(Path) is
  if equal (WORD_SIZE, "64BITS") and FileExists (Path & "64")
    Path = Path & "64"
  end
  return Path
end

if not defined ("LIB_ONLY")
%------------------------------------------------------------------------------
% misc. utilities
%

proc compare_file (dir, OutputPath) is
  local ExpectedPath = dir & SL & OutputPath
  OutputPath = dir & SL & BUILD_DIR & SL & OutputPath

  %write ("compare OutputPath=" & OutputPath, ", ExpectedPath=" & ExpectedPath, CR)
  if stale (OutputPath, OutputPath)
    write (OutputPath, " is missing", CR)
    html ([OutputPath, "missing"])
    return
  end

  if stale (ExpectedPath, ExpectedPath)
    write (ExpectedPath, " is missing", CR)
    html ([ExpectedPath, "missing"])
    return
  end

  ExpectedPath = subst_chars (ExpectedPath, SL, diff_slash)
  OutputPath = subst_chars (OutputPath, SL, diff_slash)

  ExpectedPath = File64(ExpectedPath)

  exec (diff, ExpectedPath, OutputPath, head)
  if defined("HTML")
    exec (diff, ExpectedPath, OutputPath, ">>", report)
  end
end

if defined ("LOG_CMPS")
  ComparisonLogFilePath = PACKAGE_DIR & SL & "m3tests-" & datestamp() & ".diffs"
  fs_rmfile(ComparisonLogFilePath)
end

proc FileExists(x) is
    return not stale(x, x)
end

proc cmp_file (dir, file) is
  local ExpectedPath = dir & SL & file
  local OutputPath = dir & SL & BUILD_DIR & SL & file

  ExpectedPath = File64(ExpectedPath)

  %write ("cmp OutputPath=" & OutputPath, ", ExpectedPath=" & ExpectedPath, CR)
  if stale (OutputPath, OutputPath)
    return ""
  end

  if stale (ExpectedPath, ExpectedPath)
    return ""
  end

  local ComparisonLogData = []
  if defined ("LOG_CMPS")
    ComparisonLogData += "cmp_file(" & ExpectedPath & ", " & OutputPath & ")\n"
  end

  local OutputContents = fs_contents (OutputPath)
  local ExpectedContents = fs_contents (ExpectedPath)

  if defined ("LOG_CMPS")
    ComparisonLogData += OutputPath & ":\n" & OutputContents & "\n"
    ComparisonLogData += ExpectedPath & ":\n" & ExpectedContents & "\n"
  end

  %if equal(try_exec ("@cmp", OutputPath, ExpectedPath), 0)
  if equal(OutputContents, ExpectedContents)
    if defined ("LOG_CMPS")
      ComparisonLogData += "--> TRUE\n"
      >> ComparisonLogFilePath in 
        write (ComparisonLogData)
      end
    end
    return "T"
  end
  if defined ("LOG_CMPS")
    ComparisonLogData += "--> FALSE\n"
    >> ComparisonLogFilePath in 
      write (ComparisonLogData)
    end
  end
  return ""
end

