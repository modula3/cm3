%------------------------------------------------------------------------------
% run a test case
%

readonly proc run_test (class, group, uid, comment, should_run) is

  local dir = ".." & SL & "src" & SL & group & SL & uid
  fs_rmrec (dir & SL & BUILD_DIR)

  if defined ("_all") or defined (class) or defined ("_" & uid)
    write ("--- ", uid, " --- ", comment, CR)
    fs_mkdir (dir & SL & BUILD_DIR)
    exec ("-cd", dir, "&& cm3", "-silent", "-DM3TESTS", ">" & BUILD_DIR & SL & "stdout.build.raw 2>" & BUILD_DIR & SL & "stderr.build.raw")

    NormalizeFile (dir & SL & BUILD_DIR & SL & "stdout.build")
    NormalizeFile (dir & SL & BUILD_DIR & SL & "stderr.build")

    if defined ("CAPTURE_BUILD")
      if not cmp_file (dir, "stdout.build")
        cp_if (dir & SL & BUILD_DIR & SL & "stdout.build", dir & SL & "stdout.build")
      end
      if not cmp_file (dir, "stderr.build")
        cp_if (dir & SL & BUILD_DIR & SL & "stderr.build", dir & SL & "stderr.build")
      end
    end

    local ok1 = cmp_file (dir, "stdout.build") and
                cmp_file (dir, "stderr.build")
    local ok2 = "T"

    if should_run
      ok2 = cmp_file (dir, "stdout.pgm") and
            cmp_file (dir, "stderr.pgm")
    end

    if ok1 and ok2
      html (["<tr class=\"bggreen tl\"><td>", uid,
             "</td><td class=\"small\" width=\"45%\">", comment])
      >> "res.ok" in
        write (uid, CR)
      end
    else
      html (["<tr class=\"bgred tl\"><td>", uid,
             "</td><td class=\"small\" width=\"45%\">", comment])
      >> "res.ko" in
        write (uid, CR)
      end
    end

    html ("</td><td class=\"small\"><pre>")
    compare_file (dir, "stdout.build")
    compare_file (dir, "stderr.build")
    if should_run
      compare_file (dir, "stdout.pgm")
      compare_file (dir, "stderr.pgm")
    end
    html (["</pre></td></tr>", CR])

    if not defined ("keep")
      fs_rmrec (dir & SL & BUILD_DIR)
    end
  end
end

%------------------------------------------------------------------- ptests ---
% PROG tests: complete programs where the output of the program
%   is what's of interest.

readonly proc p_test (group, uid, comment) is
  run_test ("_ptests", group, uid, comment, "run")
end

